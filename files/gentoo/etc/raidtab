# / partition
# md127 : active raid0 nvme0n1p3[0] nvme1n1p3[1]
#      1917607296 blocks super 1.2 16k chunks

raiddev /dev/md127 # raid device name
raid-level 0 # raid 0
nr-raid-disks 2 # number of disks in the array
chunk-size 16 # stripe size in kilobytes
persistent-superblock 1
device /dev/nvme0n1p3 # device that comprises the raid array
raid-disk 0 # disk positing index in array
device /dev/nvme1n1p3 # device that comprises the raid array
raid-disk 1 # disk position index in array
